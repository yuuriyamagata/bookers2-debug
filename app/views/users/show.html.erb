<div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
            <h2>User info</h2>
            <%= render 'info', book: @book,user: @user %>
            
             <% if current_user.following?(@user) %>
            <td><%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class:"btn btn-success btn-sm" %>
              <% else %></td>
            <td><%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-info btn-sm" %>

              <% end %></td>
                
            <h2 class="mt-3">New book</h2>
            <%= render 'books/form', book: @book,user: @user %>
      </div>
      
       <div class='col-md-8 offset-md-1'>
            <h2>Books</h2>
            <%= render 'books/index',books: @user.books %>
      </div>
    </div>
</div>
