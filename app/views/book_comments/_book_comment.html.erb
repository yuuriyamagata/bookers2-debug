 <% book.book_comments.each do |book_comment| %>
                          <tr>
                            <td>
                            <%= link_to user_path(book_comment.user) do %>
                            <%= image_tag book_comment.user.get_profile_image(100, 100) %><% end %> </td>
                            <td><%= book_comment.user.name %></td>
                            <td><%= book_comment.comment %></td>
                            <td>  <% if book_comment.user == current_user %>
                                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-danger btn-sm", remote:true, data: {"turbolinks" => false} %>
                              <% end %>
                            </td>
                          </tr>
                          
                          <% end %>
                         